{
  "manifest_version": 2,
  "name": "BabbelSky",
  "version": "0.1.0",
  "description": "Enhances the translation feature on Bluesky posts using custom translation services.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "*://bsky.app/profile/*/post/*",
    "https://api.openai.com/*",
    "https://translation.googleapis.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_security_policy": "script-src 'self' https://api.openai.com https://translation.googleapis.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["*://bsky.app/profile/*/post/*"],
      "js": ["detector.js"],
      "run_at": "document_end"
    }
  ],
  "applications": {
    "gecko": {
      "id": "babbelsky@translation.com",
      "strict_min_version": "42.0"
    }
  }
}
